    <script>
        // Simulação de atualização de dados em tempo real
        setInterval(() => {
            // Atualizar estatísticas de traduções
            const translationsElement = document.querySelector('.stats-grid .stat-card:nth-child(1) .stat-value');
            let translations = parseInt(translationsElement.textContent);
            translations += Math.floor(Math.random() * 2);
            translationsElement.textContent = translations;
            
            // Atualizar estatísticas de receita
            const revenueElement = document.querySelector('.card:nth-child(3) .stat:nth-child(3) span:nth-child(2)');
            let revenue = parseFloat(revenueElement.textContent.replace('R$ ', '').replace(',', ''));
            revenue += (Math.random() * 5).toFixed(2);
            revenueElement.textContent = 'R$ ' + revenue.toLocaleString('pt-BR', {maximumFractionDigits: 2});
            
            // Simular alteração na taxa de conversão
            const conversionElement = document.querySelector('.card:nth-child(3) .stat:nth-child(2) span:nth-child(2)');
            let conversion = parseFloat(conversionElement.textContent.replace('%', ''));
            conversion = (3.5 + Math.random() * 1.5).toFixed(1);
            conversionElement.textContent = conversion + '%';
            
            // Atualizar barra de progresso da conversão
            const conversionProgress = document.querySelector('.card:nth-child(3) .progress-bar:nth-child(4) .progress');
            conversionProgress.style.width = conversion + '%';
            
        }, 5000);
        
        // Simular clique nos botões
        document.querySelectorAll('.btn').forEach(button => {
            button.addEventListener('click', function() {
                const originalText = this.innerHTML;
                this.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processando...';
                
                setTimeout(() => {
                    this.innerHTML = originalText;
                    
                    // Adicionar entrada no log de eventos
                    const eventLog = document.querySelector('.event-log');
                    const now = new Date();
                    const timeString = now.toISOString().replace('T', ' ').substring(0, 19);
                    
                    const eventEntry = document.createElement('div');
                    eventEntry.className = 'event-entry';
                    eventEntry.innerHTML = `
                        <span class="event-time">${timeString}</span>
                        <span>Ação realizada: ${originalText}</span>
                    `;
                    
                    eventLog.prepend(eventEntry);
                    
                }, 1500);
            });
        });
    </script>
